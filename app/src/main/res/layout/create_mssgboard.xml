<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
android:paddingBottom="@dimen/activity_vertical_margin"
tools:context="com.example.smeeks.mobilizetherev.create_event"
android:id="@+id/cevent"
    android:background="#ff7fd5f0">



<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:text="Create MessageBoard"
    android:id="@+id/textView13"
    android:layout_centerHorizontal="true" />

<TableLayout
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:layout_below="@+id/textView13"
    android:layout_marginTop="42dp"
    android:baselineAligned="false"
    android:collapseColumns="0"
    android:id="@+id/create_other"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/tablerow1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text= "Title:"
            android:id="@+id/textView14"
            android:layout_column="3"
            android:paddingBottom="20dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText"
            android:layout_column="6"
            android:layout_span="10"
            android:layout_weight="10" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Message:"
            android:id="@+id/textView15"
            android:layout_column="3"
            android:paddingBottom="20dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/editText2"
            android:layout_column="19"
            android:layout_weight="20" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Copy link/upload:"
            android:id="@+id/textView16"
            android:layout_column="3"
            android:paddingBottom="20dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText3"
            android:layout_column="19"
            android:layout_weight="20" />
    </TableRow>


</TableLayout>

<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Create"
    android:id="@+id/button"
    android:layout_below="@+id/create_other"
    android:layout_centerHorizontal="true" />

</RelativeLayout>
